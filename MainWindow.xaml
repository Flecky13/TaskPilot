<Window x:Class="TaskPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="TaskPilot - Programmüberwachung"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="StatusEllipseStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Stroke" Value="#333"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="TaskPilot" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Programmüberwachung" FontSize="12" Foreground="#E3F2FD"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="LastUpdateText" Text="Letzte Aktualisierung: --:--:--"
                               Foreground="White" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptbereich -->
        <DataGrid Grid.Row="1"
                  x:Name="ProgramsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  AlternatingRowBackground="#FAFAFA"
                  RowHeight="20"
                  Margin="10">

            <DataGrid.Resources>
                <ContextMenu x:Key="ProgramRowContextMenu"
                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                    <MenuItem Header="Prozess stoppen" Click="StopProcessMenuItem_Click"/>
                    <MenuItem Header="Prozess starten" Click="StartProcessMenuItem_Click"/>
                    <Separator/>
                    <MenuItem Header="Prozess minimieren" Click="MinimizeProcess_Click"/>
                    <MenuItem Header="Prozess in den Vordergrund" Click="MaximizeProcess_Click"/>
                </ContextMenu>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                        PreviewMouseRightButtonDown="StatusCell_PreviewMouseRightButtonDown">
                                <Ellipse Style="{StaticResource StatusEllipseStyle}"
                                         Fill="{Binding StatusColor}"/>
                                <StackPanel.ContextMenu>
                                    <ContextMenu ContextMenuOpening="ContextMenu_Opening">
                                        <MenuItem x:Name="StopMenuItem" Header="Prozess stoppen" Click="StopProcessMenuItem_Click"/>
                                        <MenuItem x:Name="StartMenuItem" Header="Prozess starten" Click="StartProcessMenuItem_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Prozess minimieren" Click="MinimizeProcess_Click"/>
                                        <MenuItem Header="Prozess in den Vordergrund" Click="MaximizeProcess_Click"/>
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Programmname" Binding="{Binding DisplayName}" Width="*" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Prozessname" Binding="{Binding ProcessName}" Width="200"/>
                <DataGridTextColumn Header="PID" Binding="{Binding ProcessID}" Width="80"/>
                <DataGridTextColumn Header="Zustand" Binding="{Binding StatusText}" Width="120"/>
                <DataGridTextColumn Header="Seit" Binding="{Binding StatusSince, StringFormat='dd.MM.yyyy HH:mm:ss'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer / Statusleiste -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="10" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Erste Reihe: Status Info und AutoStart -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="StatusText" Text="Bereit" VerticalAlignment="Center" Margin="0,0,20,0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ProgramCountText" Text="0 Programme überwacht" VerticalAlignment="Center"/>
                    </StackPanel>

                    <CheckBox Grid.Column="1" x:Name="AutoStartCheckBox" Content="AutoStart" IsChecked="True"
                              Checked="AutoStartCheckBox_Checked" Unchecked="AutoStartCheckBox_Unchecked"
                              VerticalAlignment="Center" Foreground="Black" FontSize="12"/>
                </Grid>

                <!-- Zweite Reihe: Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Alle minimieren" Click="MinimizeAll_Click" Padding="12,6" Margin="0,0,8,0" Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
                    <Button Content="Alle maximieren" Click="MaximizeAll_Click" Padding="12,6" Margin="0,0,8,0" Background="#4CAF50" Foreground="White" FontWeight="SemiBold"/>
                    <Button Content="Debug-Konsole" Click="ShowDebug_Click" Padding="15,6" Margin="0,0,8,0" Background="#FF9800" Foreground="White" FontWeight="SemiBold"/>
                    <Button Content="Aktualisieren" Click="Refresh_Click" Padding="15,6" Margin="0,0,8,0"/>
                    <Button Content="Konfiguration bearbeiten" Click="EditConfig_Click" Padding="15,6"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
