<Window x:Class="TaskPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="TaskPilot - Programmüberwachung"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="StatusEllipseStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Stroke" Value="#333"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="TaskPilot" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Programmüberwachung" FontSize="12" Foreground="#E3F2FD"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="LastUpdateText" Text="Letzte Aktualisierung: --:--:--"
                               Foreground="White" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptbereich -->
        <DataGrid Grid.Row="1"
                  x:Name="ProgramsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  AlternatingRowBackground="#FAFAFA"
                  RowHeight="40"
                  Margin="10">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Status" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Ellipse Style="{StaticResource StatusEllipseStyle}"
                                         Fill="{Binding StatusColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Programmname" Binding="{Binding DisplayName}" Width="*" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Prozessname" Binding="{Binding ProcessName}" Width="200"/>
                <DataGridTextColumn Header="Zustand" Binding="{Binding StatusText}" Width="120"/>
                <DataGridTextColumn Header="Seit" Binding="{Binding StatusSince}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer / Statusleiste -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="10,5" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" Text="Bereit" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="ProgramCountText" Text="0 Programme überwacht" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="AutoStartCheckBox" Content="AutoStart" IsChecked="True"
                              Checked="AutoStartCheckBox_Checked" Unchecked="AutoStartCheckBox_Unchecked"
                              Margin="0,0,20,0" VerticalAlignment="Center" Foreground="Black" FontSize="12"/>
                    <Button Content="Debug-Konsole" Click="ShowDebug_Click" Padding="15,5" Margin="0,0,10,0" Background="#FF9800" Foreground="White" FontWeight="SemiBold"/>
                    <Button Content="Aktualisieren" Click="Refresh_Click" Padding="15,5" Margin="0,0,10,0"/>
                    <Button Content="Konfiguration bearbeiten" Click="EditConfig_Click" Padding="15,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
