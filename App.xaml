<Application x:Class="TaskPilot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Moderne Farben und Styles -->
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="ActiveBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="InactiveBrush" Color="#F44336"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>

            <!-- Systemtray Icon -->
            <tb:TaskbarIcon x:Key="NotifyIcon"
                            IconSource="/icons/toolicon.ico"
                            ToolTipText="TaskPilot - Programmüberwachung">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Fenster öffnen" Click="ShowWindow_Click" FontWeight="Bold"/>
                        <Separator/>
                        <MenuItem Header="Konfiguration neu laden" Click="ReloadConfig_Click"/>
                        <Separator/>
                        <MenuItem Header="Beenden" Click="Exit_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>
